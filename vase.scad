        render() difference() {
                sphere(r=o, $fn=100);
                scale([1, 1, 0.5])
                        sphere(r=i, $fn=100);
                translate([-o, -o, 0])
                        cube([2*o,2*o,o]);
        }
}

module scallops(cnt,t,r,tilt) {
        translate(t+[0,0,0])
                for (i=[1:cnt]) {
                        //rotate([16/70*90,0,360/cnt*i])
                        rotate([0,0,360/cnt*i])
                                scale([1,1,2])
                                translate([r,0,0])
                                rotate([0, tilt, 0])
                                cup(30, 42);
                }
}

